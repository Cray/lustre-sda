.PHONY: clean

clean:
	rm -f ../linuxout/lib/dtad.a
	rm -f ../linuxout/obj/Ata.o
	rm -f ../linuxout/obj/atatasks.o
	rm -f ../linuxout/obj/dta.o
	rm -f ../linuxout/obj/parseoptions.o
	rm -f ../linuxout/obj/satcdb.o
	rm -f ../linuxout/obj/Scsi.o
	rm -f ../linuxout/obj/tfr.o
	rm -f ../linuxout/obj/tfrSAT.o

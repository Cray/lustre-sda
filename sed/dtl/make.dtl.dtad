osLogObject.o: $(HEADER) $(PLFDIR)/osLogObject.cpp
	g++ -c $(CPPFLAG) -Idta -I$(TPTDIR) -I$(LNXDIR) -I$(SYSDIR) $(PLFDIR)/osLogObject.cpp

